                 , testing-feat
                 , template-haskell
                 , mtl
                 , lens
                 , random
                 , transformers
                 , haskell-src-exts
                 , containers

  if flag(profiling)
     GHC-Options: -Wall -O2 -fno-warn-type-defaults -enable-library-profiling -auto-all
  else
     GHC-Options: -Wall -O2 -fno-warn-type-defaults
  hs-source-dirs: src

test-suite testing
  type:
    exitcode-stdio-1.0

  main-is:
    Test.hs

  build-depends: base ==4.6.*
               , quickgen
               , containers
               , template-haskell
               , groom

  default-language:
    Haskell2010
