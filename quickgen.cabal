Flag profiling
  Default: False

executable test
  main-is: Test.hs
  GHC-Options: -Wall -O2 -fno-warn-type-defaults
  build-depends: base ==4.6.*
               , quickgen
               , containers
               , template-haskell
               , groom


library
  exposed-modules: Testing.QuickGen
  -- The following internal modules should be hidden later
  --  other-modules:
                 ,
                   Testing.QuickGen.ExpGen
                 , Testing.QuickGen.TH
                 , Testing.QuickGen.THInstances
                 , Testing.QuickGen.Types
